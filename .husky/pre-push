#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

# Type checking
echo "⚙️  Running TypeScript type check..."
npm run type-check

# Linting
echo "🔧 Running ESLint..."
npm run lint

# Build check
echo "🏗️  Running build check..."
npm run build

echo "✅ All pre-push checks passed!"
